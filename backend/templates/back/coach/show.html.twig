{% extends 'base.html.twig' %}

{% block title %}Coach{% endblock %}

{% block body %}
    <h1 class="text-center title mb-4">Coach</h1>

    <div class="bg-light p-4" id="rounded-table">
        <table class="table bg-light">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ coach.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ coach.user.lastname }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ coach.user.firstname }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ coach.user.email }}</td>
                </tr>
                <tr>
                    <th>Date de naissance</th>
                    <td>{{ coach.user.dateBirth | date('d-m-Y') }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ coach.user.description }}</td>
                </tr>
                <tr>
                    <th>Lien photo de profil</th>
                    <td>{{ coach.user.picture }}</td>
                </tr>
                <tr>
                    <th>Genre</th>
                    <td>{{ coach.user.gender == 1 ? 'Homme' : 'Femme' }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ coach.user.city }}</td>
                </tr>
                <tr>
                    <th>Natation</th>
                    <td>{{ coach.swim ? 'Oui' : 'Non' }}</td>
                </tr>
                <tr>
                    <th>Cyclisme</th>
                    <td>{{ coach.bike ? 'Oui' : 'Non' }}</td>
                </tr>
                <tr>
                    <th>Course à pied</th>
                    <td>{{ coach.run ? 'Oui' : 'Non' }}</td>
                </tr>
                <tr>
                    <th>Experience</th>
                    <td>{{ coach.experience }}</td>
                </tr>
                <tr>
                    <th>Disponibilité</th>
                    <td>{{ coach.isAvailable ? 'Oui' : 'Non' }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex p-2">
            <a class="pt-2" href="{{ path('app_back_coach_index') }}">{% include './assets/return.svg.twig' %}</a>
            <a class="pt-2" href="{{ path('app_back_coach_edit', {'id': coach.id}) }}">{% include './assets/modify.svg.twig' %}</a>
            {{ include('back/coach/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
